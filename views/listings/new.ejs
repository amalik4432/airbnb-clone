<% layout('/layouts/boilerplate')-%>
<body>
  <br />
  <br />
  <div class="row">
    <div class="col-8 offset-2">
      <h1>Form to add new Listing</h1>
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label class="form-label" for="title"> Enter Title</label>
          <input
            class="form-control"
            type="text"
            name="listing[title]"
            placeholder="Enter Title"
            required
          />
          <div class="invalid-feedback">Please Enter Valid Title</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Enter Description</label>
          <textarea
            class="form-control"
            name="listing[description]"
            cols="50"
            rows="10"
            placeholder="Enter description"
            required
          ></textarea>
          <div class="invalid-feedback">Please Enter Valid Description</div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="image">Upload image</label>
          <input
            class="form-control"
            type="file"
            name="listing[image]"
            placeholder="Enter URL"
            required
          />
        </div>

        <div class="mb-3">
          <label class="form-label" for="price">Enter Price</label>
          <input
            class="form-control"
            type="text"
            name="listing[price]"
            placeholder="Enter Price"
            required
          />
          <div class="invalid-feedback">Please Enter Valid Price</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="form-label" for="country">Enter Your Country</label>
            <input
              class="form-control"
              type="text"
              name="listing[country]"
              placeholder="Enter country"
              required
            />
            <div class="invalid-feedback">Please Enter Valid Country</div>
          </div>

          <div class="mb-3 col-md-8">
            <label class="form-label" for="location">Enter Location</label>
            <input
              class="form-control"
              type="text"
              name="listing[location]"
              placeholder="Enter location"
              required
            />
            <div class="invalid-feedback">Please Enter Valid Location</div>
          </div>
        </div>

        <button class="btn add-btn btn-dark mb-5 mt-2" type="submit">
          Add Listing
        </button>
      </form>
    </div>
  </div>
</body>
