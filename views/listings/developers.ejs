<% layout('/layouts/boilerplate') -%>
<body>
  <% for(let user of users) { %>
  <div class="card mb-3 col-8 offset-2 mt-4 shadow-lg" style="max-width: 800px">
    <div class="row g-0">
      <!-- Profile Picture -->
      <div class="col-md-4 text-center p-3 mt-4">
        <img
          src=""
          class="img-fluid rounded-circle shadow-sm"
          alt="Profile Picture"
        />
      </div>

      <!-- Personal Info -->
      <div class="col-md-8 mt-4 mb-4">
        <div class="card-body">
          <h3 class="card-title mb-1"><%= user.name %></h3>
          <p class="text-muted"><%= user.role %></p>

          <hr />

          <p class="mb-2"><strong>Email:</strong> <%= user.email %></p>
          <p class="mb-2"><strong>Phone:</strong> <%= user.phone %></p>
          <p class="mb-2"><strong>Location:</strong> <%= user.location %></p>
          <p class="mb-2">
            <strong>Skills:</strong> <%= user.skills.join(", ") %>
          </p>

          <p class="card-text mt-3">
            <small class="text-body-secondary"
              >Last updated: <%= user.updatedAt %></small
            >
          </p>
        </div>
      </div>
    </div>
  </div>
  <%} %>
</body>
